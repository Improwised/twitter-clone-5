root: true

env:
  node: true
  es6: true

extends:
  "airbnb-base"

globals:
  log: true
  it: true
  describe: true

rules:
  vars-on-top: 0
  no-unused-vars: [1, { "varsIgnorePattern": "^should$" }]

  # Warnings
  max-len: [1]

  # Errors
  quotes: [1, "single", { "avoidEscape": true, "allowTemplateLiterals": true }]
