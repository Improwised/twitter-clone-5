extends ./layouts/main.pug

block content
  .navbar-collapse.collapse.navbar-default
    ul.nav.navbar-nav.navbar-left
      li#nav-home
        a(href='/header')
          i.fa.fa-home.fa-2x

          span.nav-icon-text Home
      li#nav-notification
        a(href='updateprofile')
          i.fa.fa-pencil-square-o.fa-2x
            span.sr-only
          span.nav-icon-text Profile
      li#nav-meassage
        a(href='#')
          i.fa.fa-comment.fa-2x

          span.nav-icon-text Messages


    .form-group
      a#btnsignout(href='/logout')
        span.fa.fa-sign-out.fa-2x


    //tweet button with popup window
    button#myBtn.btn.btn-info(type='button', data-toggle='modal', data-target='#exampleModal') Tweet

    #exampleModal.modal.fade(role='dialog', tabindex="-1",aria-labelledby="exampleModalLabel" aria-hidden="true")
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            h4(style='font-family:"Comic Sans MS", cursive, sans-serif;').modal-title Compose New Tweet
          .modal-body
            form(id='tweet', method='post', action='/header', enctype='multipart/form-data')
              .form-group
                label(for='comment') Whats Happening???
                textarea#comment.form-control(rows='5',name='comment', maxlength = '140', autofocus, required)
                input.form-control(type='file', name='file' ,style = "margin : -5px 0px 10px 0px ;color : #00aced;")
                a(href='/header')
                button.btn.btn-info(type='submit') Tweet

          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close


    .form-group
      a#btnprofile(href='/profile')
        span.fa.fa-user.fa-2x

  .container
    .row

      .col-md-3
        h3(align='center', style='font-family:"Palatino Linotype", "Book Antiqua", Palatino, serif;')  Your Profile
        a(href='/profile')
          .well
            p
              each user in username
                .form-group(align='center')
                  img.img-thumbnail(src='./images/profile/'+ user.image,width ="200px" height="200px")
                h3(align='center')= user.fullname


        //- expandable list
        #menu
        .panel.list-group
          //- .form(action='/followername', method='get')
          a.list-group-item(data-toggle='collapse', data-target='#sm',   data-parent='#menu')
            | Profile
            //- span.label.label-info 5

          #sm.sublinks.collapse
            a(href='/updateprofile').list-group-item.small
              span.glyphicon.glyphicon-chevron-right
              |  Update Profile
            a(href='/updateprofile').list-group-item.small
              span.glyphicon.glyphicon-chevron-right
              |  Update Profile Picture

          a.list-group-item(data-toggle='collapse', data-target='#sl', data-parent='#menu')
            | Following
            span.glyphicon.glyphicon-tag.pull-right
          #sl.sublinks.collapse
            a.list-group-item.small
              span.glyphicon.glyphicon-chevron-right
              |  saved tasks
            a.list-group-item.small
              span.glyphicon.glyphicon-chevron-right
              |  add new task




      .col-md-6
        h3(align='center', style='font-family:"Palatino Linotype", "Book Antiqua", Palatino, serif;')   Tweets
        each book in tweets
          - console.log(book);
          .row
            .well
              p
                h4= book.fullname
                h4 tweeted
                br
                br
                span= book.t_tweetText
                br
                br
                - if(book.t_image){
                  div(class='form-group')
                      img.img-thumbnail(src='./images/tweetimage/'+ book.t_image,width ="200px" height="200px")
                -}

                span= book.t_time
                br
                br
                a(href='#')#like.span.fa.fa-heart.fa-1x
                |  &nbsp
                span= book.t_likeCount



      .col-md-3
        h3(align='center', style='font-family:"Palatino Linotype", "Book Antiqua", Palatino, serif;') Want to Follow???
        each name in follow
          .well
            .form-group(align='center')
              h4= name.fullname
              form(method='post', action='/follow')
                .form-group
                  img.img-thumbnail(src='./images/profile/'+ name.image,width ="100px" height="100px")
                  br
                  input(type='hidden', name='myfollow', value = name.id)
                  br
                  button.followbtn.btn.btn-primary(type='submit') Follow
                  br


