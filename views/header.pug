extends ./layouts/main.pug

block content

  .navbar-collapse.collapse.navbar-default
    ul.nav.navbar-nav.navbar-left
      li#nav-home
        a(href='/header')
          i.fa.fa-home.fa-3x

          span.nav-icon-text Home
      li#nav-notification
        a(href='#')
          i.fa.fa-bell.fa-3x

          span.nav-icon-text Notification
      li#nav-meassage
        a(href='#')
          i.fa.fa-comment.fa-3x

          span.nav-icon-text Messages

    .form-group
      a#btnsignout(href='/logout')
        span.fa.fa-sign-out.fa-3x


    //tweet button with popup window
    button#myBtn.btn.btn-info.btn-lg(type='button', data-toggle='modal', data-target='#exampleModal') Tweet

    #exampleModal.modal.fade(role='dialog', tabindex="-1",aria-labelledby="exampleModalLabel" aria-hidden="true")
      .modal-dialog
        // Modal content
        .modal-content
          .modal-header
            button.close(type='button', data-dismiss='modal') Ã—
            h4.modal-title Compose New Tweet
          .modal-body
            form(id='tweet', method='post', action='/header')
              .form-group
                label(for='comment') Whats Happening???
                textarea#comment.form-control(rows='5',name='comment')
                a(href='/header')
                  button#tweetbtn.btn-info(type='submit') Tweet

          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Close


    .form-group
      a#btnprofile(href='/profile')
        span.fa.fa-user.fa-3x



  .container
    .row
      .col-md-3
        .well
          img(src='http://www.medplaya.es/images/logo/user.png',style="height:150px; width:150px; margin-left:40px")
          p
            each user in username
              h3= user.fullname





      .col-md-6
        each book in tweets
          .row
            .well
              p
                h4= book.fullname
                h4 tweeted
                br
                br
                span= book.t_tweetText
                br
                br
                span= book.t_time
                br
                br
                a(href='#')#like.span.fa.fa-heart.fa-1x
                |  &nbsp
                span= book.t_likeCount



      .col-md-3
        each name in follow
          .well
            span= name.fullname
            form(method='post', action='/follow')
              br
              span.fa.fa-user.fa-3x
              br
              input(type='hidden', name='myfollow', value = name.id)
              button(type='submit').fa.fa-hand-o-right.fa-2x
