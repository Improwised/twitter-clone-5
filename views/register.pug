extends ./layouts/main.pug

block content


  .container
    .wrapper
      form.form-signup(action='/register' method='POST')
        h2.form-signin-heading Join Today
        br
        br
        input.form-control(type='text', name='fullname', placeholder='Enter your name', required='', autofocus='',id='fullname')
        input.form-control(type='email', name='emailid', placeholder='Email-Id', required='', id="emailid")
        input.form-control(type='password', name='password', placeholder='password', required='', id="password")

        button.btn.btn-lg.btn-info.btn-block(type='submit', name='submit') SignUp
        br
        br

